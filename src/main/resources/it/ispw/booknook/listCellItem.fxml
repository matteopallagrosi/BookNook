<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="cell" prefHeight="108.0" prefWidth="500.0" style="-fx-background-color: #ececec;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="cover" fitHeight="93.0" fitWidth="59.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@harryPotter1.jpg" />
            </image>
        </ImageView>
        <Label fx:id="title" layoutX="80.0" layoutY="8.0" text="Harry Potter and the Half-Blood Prince">
            <font>
                <Font name="Roboto Medium" size="13.0" />
            </font>
        </Label>
        <Label fx:id="author" layoutX="80.0" layoutY="32.0" text="J. K. Rowling">
            <font>
                <Font name="Roboto Medium" size="13.0" />
            </font>
        </Label>
        <Button fx:id="tag1" layoutX="80.0" layoutY="54.0" mnemonicParsing="false" style="-fx-background-radius: 8; -fx-background-color: #c9c9c9; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 2);" text="Drama" />
        <Button fx:id="tag2" layoutX="146.0" layoutY="54.0" mnemonicParsing="false" style="-fx-background-radius: 8; -fx-background-color: #c9c9c9; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 2);" text="Teenagers" />
        <Button fx:id="borrowBtn" layoutX="421.0" layoutY="34.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="71.0" stylesheets="@buttonYellow.css" text="Borrow" />
      <Button fx:id="tag21" layoutX="233.0" layoutY="54.0" mnemonicParsing="false" style="-fx-background-radius: 8; -fx-background-color: #c9c9c9; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 2);" text="School" />
      <Button fx:id="tag22" layoutX="300.0" layoutY="54.0" mnemonicParsing="false" style="-fx-background-radius: 8; -fx-background-color: #c9c9c9; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 2);" text="Fantasy" />
      <MenuButton fx:id="addToListBtn" layoutX="420.0" layoutY="70.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 2);" stylesheets="@menuButton.css" text="Add to list" />
    </children>
</AnchorPane>
